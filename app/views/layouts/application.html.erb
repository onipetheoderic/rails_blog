<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="sidenav">
  <a href="#"><%=link_to "About", about_path %></a>
  <a href="#"><%= link_to "Home", root_path %></a>
  
  <% if user_signed_in? %>
    <a href="#"><%= link_to('Logout', destroy_user_session_path, method: :delete) %> </a>
    <a href="#"><%=link_to "New Post", new_post_path %></a>
  <% else %>
  <a href="#"><%= link_to('Login', new_user_session_path)  %></a>
  <% end %>

</div
  <div class ="navbar">
  	
  </div>
  <ul>
  <% if flash[:notice] %>
    <div class="alert-info"><%= flash[:notice] %></div>
  <% end %>

        
  </ul>
    <%= yield %>
  </body>
</html>
